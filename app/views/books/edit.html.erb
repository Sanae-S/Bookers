<h1>Editing Book</h1>
div>
<% if @book.errors.any? %>
  <p><%= @book.errors.count %> error prohibited this book form being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>

    <% end %>
  </ul>
<% end %>
</div>
<%= form_for(@book) do |f| %>

  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>


  <p><%= f.label :body %></p>
  <p><%= f.text_area :body %></p>

  <p><%= f.submit 'Update Book' %></p>

<% end %>
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>