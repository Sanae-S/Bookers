<p id= "notice"> </p>
<%= flash[:notice] %>
<h1>Books</h1>
<table>
  <thead>
  	<tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
  </tr>
</thead>
  <tbody>
  	<% @books.each do |book| %>
	    <tr>
		    <td>
			  <%= book.title %>
			<!-- 最新のタイトル -->
		    </td>
		    <td>
			  <%= book.body %>
			<!-- 最新の本文 -->
		    </td>
		    <td>
			  <%= link_to "Show", book_path(book) %>
        </td>
        <td>
			  <%= link_to "Edit", edit_book_path(book) %>
        </td>
        <td>
		  <%= link_to "Destroy", book_path(book), method: :delete, date: {confirm: "Are you sure?"} %>
        </td>
	     </tr>
      <% end %>
	<!-- ループさせたい -->
  </tbody>
</table>
<h2>New book</h2>
<div>
<% if @book.errors.any? %>
  <p><%= @book.errors.count %> error prohibited this book form being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>

    <% end %>
  </ul>
<% end %>
</div>


<!-- form_for -->
<%= form_for(@book) do |f| %>


    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>


    <p><%= f.label :body %></p>
    <p><%= f.text_area :body %></p>

  <p><%= f.submit 'Create Book' %></p>

<% end %>